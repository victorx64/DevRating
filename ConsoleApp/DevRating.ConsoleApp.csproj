<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>devrating</ToolCommandName>
        <PackageOutputPath>../Package</PackageOutputPath>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>1.0.0-beta1</PackageVersion>
        <Authors>Victor Semenov</Authors>
        <Title>DevRating.ConsoleApp</Title>
        <PackageProjectUrl>https://devrating.net</PackageProjectUrl>
        <RepositoryUrl>https://github.com/victorx64/devrating</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <TargetFrameworks>netcoreapp2.1;netcoreapp2.2;netcoreapp3.0</TargetFrameworks>
        <OutputType>Exe</OutputType>
        <Description>DevRating is a command-line tool for measuring a reward of developers based on git log.</Description>
        <Copyright>Copyright © Victor Semenov 2020</Copyright>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Domain\DevRating.Domain.csproj" />
      <ProjectReference Include="..\EloRating\DevRating.EloRating.csproj" />
      <ProjectReference Include="..\LibGit2SharpClient\DevRating.LibGit2SharpClient.csproj" />
      <ProjectReference Include="..\SqliteClient\DevRating.SqliteClient.csproj" />
    </ItemGroup>

</Project>
